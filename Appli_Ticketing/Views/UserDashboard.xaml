<Page x:Class="Appli_Ticketing.Views.UserDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E293B">
    <DockPanel Margin="20">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 20" VerticalAlignment="Center">
            <Image Source="/Appli_Ticketing;component/Assets/logo_app.png" Width="40" Height="40" Margin="0 0 10 0"/>
            <TextBlock Text="Mes Tickets" FontSize="28" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel>
            <DataGrid ItemsSource="{Binding Tickets}" AutoGenerateColumns="False" CanUserAddRows="False" Height="400" Margin="0 0 0 20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Titre" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    <DataGridTextColumn Header="Création" Binding="{Binding DateCreation}" Width="*"/>
                    <DataGridTextColumn Header="Réponse" Binding="{Binding Response}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Créer un nouveau ticket" Width="250" Height="25" HorizontalAlignment="Center" Click="OnCreateTicketClick"/>
        </StackPanel>
    </DockPanel>
</Page>
