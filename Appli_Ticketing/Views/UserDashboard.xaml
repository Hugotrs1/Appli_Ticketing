<Page x:Class="Appli_Ticketing.Views.UserDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#043123">
    <DockPanel Margin="20">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 20" VerticalAlignment="Center">
            <Image Source="/Appli_Ticketing;component/Assets/logo_app.png" Width="50" Height="50" Margin="0 0 10 0"/>
            <TextBlock Text="Mes Tickets" FontSize="30" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid ItemsSource="{Binding Tickets}" AutoGenerateColumns="False" CanUserAddRows="False" Height="400" Margin="0 0 0 20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Titre" Binding="{Binding Title}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Création" Binding="{Binding DateCreation}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Réponse" Binding="{Binding Response}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Créer un nouveau ticket" Width="250" Height="25" HorizontalAlignment="Center" Click="OnCreateTicketClick"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>
