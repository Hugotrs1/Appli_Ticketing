<Page x:Class="Appli_Ticketing.Views.UserDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#043123">

    <Grid>
        <Image Source="/Assets/backgroundfull.jpg"
               Stretch="Fill"
               Panel.ZIndex="0"
               Opacity="0.8"/>
        <DockPanel Margin="20">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 20" VerticalAlignment="Center">
            <Image Source="/Appli_Ticketing;component/Assets/logo_app.png" Width="100" Height="100" Margin="0 0 10 0"/>
                <TextBlock Text="Mes Tickets" FontSize="50" Foreground="#D3C29C" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Row="0"
                      ItemsSource="{Binding Tickets}" 
                      SelectedItem="{Binding SelectedTicket, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Titre" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    <DataGridTextColumn Header="Création" Binding="{Binding DateCreation}" Width="*"/>
                    <DataGridTextColumn Header="Réponse" Binding="{Binding Response}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Créer un nouveau ticket" Width="200" Height="25" Click="OnCreateTicketClick"/>
                    <Button Content="Détails" Height="30" Width="100" Command="{Binding DetailCommand}" Margin="5"/>
                    <Button Content="Supprimer" Width="150" Height="25" Command="{Binding DeleteTicketCommand}" IsEnabled="{Binding CanDeleteTicket}" />
                    <Button Content="Valider" Width="150" Height="25" Command="{Binding ValidateTicketCommand}" IsEnabled="{Binding CanValidateTicket}"/>
                    <Button Content="Se Déconnecter" Width="150" Height="25" Click="OnLogoutClick"/>
            </StackPanel>

        </Grid>
    </DockPanel>
    </Grid>
</Page>
