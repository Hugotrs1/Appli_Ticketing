<Window x:Class="Appli_Ticketing.Views.DetailTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détail du Ticket" Height="400" Width="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Titre :" FontWeight="Bold"/>
            <TextBox Text="{Binding Ticket.Title}" Margin="0,0,0,10"/>

            <TextBlock Text="Description :" FontWeight="Bold"/>
            <TextBox Text="{Binding Ticket.Description}" Height="80" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Type :" FontWeight="Bold"/>
            <ComboBox
                    SelectedValue="{Binding Ticket.Type, Mode=TwoWay}"
                    SelectedValuePath="Content"
                    Margin="0,0,0,10">
                <ComboBoxItem Content="Incident"/>
                <ComboBoxItem Content="Demande"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Enregistrer" Command="{Binding SaveCommand}" Margin="5"/>
            <Button Content="Fermer" Click="Close_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
