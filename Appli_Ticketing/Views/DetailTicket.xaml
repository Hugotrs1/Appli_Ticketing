<Window x:Class="Appli_Ticketing.Views.DetailTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Background="#043123"
        WindowStyle="None"
        Width="400" Height="530">

    <Grid>
        <Image Source="/Appli_Ticketing;component/Assets/background.jpg"
               Stretch="Fill"
               Panel.ZIndex="0"
               Opacity="0.8"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Height="530" Panel.ZIndex="1">
            <Image Source="/Appli_Ticketing;component/Assets/logo_app.png"
               Width="100" Height="100"
               HorizontalAlignment="Center"/>

            <TextBlock Text="Titre :" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#D3C29C"
                       Margin="5,0,0,10"/>

            <TextBox Text="{Binding Ticket.Title}" 
                             Height="37" 
                             Opacity="0.8"/>

            <TextBlock Text="Description :" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#D3C29C"
                       Margin="5,10,0,10"/>

            <TextBox Text="{Binding Ticket.Description}" 
                     Height="50"
                     TextWrapping="Wrap" 
                     Opacity="0.8"/>

            <TextBlock Text="Type :" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#D3C29C"
                       Margin="5,10,0,10"/>

            <ComboBox SelectedValue="{Binding Ticket.Type, Mode=TwoWay}"
                              SelectedValuePath="Content"
                              Height="30"
                              Width="340"
                              Opacity="0.8">
                <ComboBoxItem Content="Incident"/>
                <ComboBoxItem Content="Demande"/>
            </ComboBox>

            <TextBlock Text="Réponse de l'Admin:" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#D3C29C"
                       Margin="5,10,0,10"/>

            <TextBox Text="{Binding Ticket.Response}" 
                 Height="auto" 
                 Opacity="0.8"
                 IsReadOnly="True"/>

            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                
                <Button Content="Enregistrer"
                                Width="120" Height="30"
                                Command="{Binding SaveCommand}"/>

                <Button Content="Fermer"
                                Width="120" Height="30"
                                Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
