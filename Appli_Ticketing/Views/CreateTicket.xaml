<Window x:Class="Appli_Ticketing.Views.CreateTicket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      WindowStartupLocation="CenterScreen"
      Background="#043123"
      Width="500" Height="600">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="400">
        <Image Source="/Appli_Ticketing;component/Assets/logo_app.png" Width="55" Height="51" HorizontalAlignment="Center"/>
        <TextBlock Text="Nouveau ticket" FontSize="24" Foreground="White" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <TextBlock Text="Titre" Foreground="White" Margin="10,0,0,0"/>
        <TextBox x:Name="TitleBox" Height="37" Width="380"/>

        <TextBlock Text="Description" Foreground="White" Margin="10,10,0,5"/>
        <TextBox x:Name="DescBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Width="380"/>

        <TextBlock Text="Type" Foreground="White" Margin="10,0,0,10"/>
        <ComboBox x:Name="TypeCombo" Height="30" Width="380">
            <ComboBoxItem Content="Demandes"/>
            <ComboBoxItem Content="Incident"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Valider" Width="120" Height="25" Click="OnSubmitClick" Margin="10,0,5,0"/>
            <Button Content="Annuler" Width="120" Height="25" Click="OnCancelClick" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
