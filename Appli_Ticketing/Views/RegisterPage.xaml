<Window x:Class="Appli_Ticketing.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#043123"
      Width="400" Height="500">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="280">
        <Image Source="/Appli_Ticketing;component/Assets/logo_app.png" Width="55" Height="51" HorizontalAlignment="Center"/>
        <TextBlock Text="Inscription" FontSize="24" Foreground="White" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <TextBlock Text="Nom d’utilisateur" Foreground="White"  Margin="10,10,0,0"/>
        <TextBox x:Name="UsernameTextBox" Height="37" Width="280"/>

        <TextBlock Text="Mot de passe" Foreground="White" Margin="10,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Height="37" Width="280"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button Content="S'inscrire" Width="120" Height="25" Click="OnRegisterConfirm" Margin="0,20,5,0"/>
            <Button Content="Retour" Width="120" Height="25" Click="OnBack" Margin="5,20,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
