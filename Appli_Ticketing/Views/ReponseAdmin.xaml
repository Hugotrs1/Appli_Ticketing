<Window x:Class="Appli_Ticketing.Views.ReponseAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#043123"
        WindowStartupLocation="CenterScreen"
        Width="400" Height="480">

    <Grid>
        <Image Source="/Appli_Ticketing;component/Assets/backgroundfull.png"
               Stretch="Fill"
               Panel.ZIndex="0"
               Opacity="0.8"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Height="440" Panel.ZIndex="1">

            <Image Source="/Appli_Ticketing;component/Assets/logo_app.png"
                   Width="150" Height="150"
                   HorizontalAlignment="Center"/>

            <TextBlock Text="Votre réponse :" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Foreground="#D3C29C"
                       Margin="10,0,0,10"/>

            <TextBox x:Name="ResponseTextBox"
                    Height="100" Width="330">
            </TextBox>

            <Button Content="Envoyer"
                Width="120"
                Height="35"
                Margin="10,20,0,0"
                HorizontalAlignment="Center"
                Click="OnSendClick"/>
        </StackPanel>
    </Grid>
</Window>